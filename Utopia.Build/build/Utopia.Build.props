<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <!--defining properties interesting for my task-->
    <PropertyGroup>
        <_AppSettingsStronglyTyped_TaskFolder>$(MSBuildThisFileDirectory)..\tasks\netstandard2.0</_AppSettingsStronglyTyped_TaskFolder>
        <_UtopiaMsbuild_Assembly>$(_AppSettingsStronglyTyped_TaskFolder)\$(MSBuildThisFileName).dll</_UtopiaMsbuild_Assembly>
    </PropertyGroup>

    <UsingTask TaskName="$(MSBuildThisFileName).RunUtopiaToolTask" AssemblyFile="$(_UtopiaMsbuild_Assembly)"/>
    <UsingTask TaskName="$(MSBuildThisFileName).GeneratePluginSourceTask" AssemblyFile="$(_UtopiaMsbuild_Assembly)"/>
    
</Project>
