<Project Sdk="Microsoft.NET.Sdk">

  <UsingTask TaskName="Utopia.MSBuild.RunUtopiaToolTask" AssemblyFile="$(ProjectDir)\..\Utopia.MSBuild\bin\Debug\netstandard2.0\Utopia.MSBuild.dll"/>
  <UsingTask TaskName="Utopia.MSBuild.GeneratePluginInformationTask" AssemblyFile="$(ProjectDir)\..\Utopia.MSBuild\bin\Debug\netstandard2.0\Utopia.MSBuild.dll"/>

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

    <PropertyGroup Condition="'$(VersionSuffix)' == ''">
        <Version>$([System.IO.File]::ReadAllText("version.txt"))</Version>
    </PropertyGroup>

    <PropertyGroup Condition="'$(VersionSuffix)' != ''">
        <Version>$([System.IO.File]::ReadAllText("version.txt"))-$(VersionSuffix)</Version>
    </PropertyGroup>

    <Target Name="AssemblyVersion">
        <AssemblyInfo CodeLanguage="CS" OutputFile="$(MSBuildProjectDirectory)\Properties\VersionInfo.generated.cs" AssemblyVersion="$(Version)" AssemblyFileVersion="$(Version)" />
        <Message Text="Version: $(Version)" />
    </Target>

    <Target Name="GenerateSource" BeforeTargets="Build">
      <GeneratePluginInformationTask AccessVersionFromParent="true" AccessPluginFromParent="true" ProjectDir="$(ProjectDir)" Namespace="$(RootNamespace)">
          <Output TaskParameter="Arguments" PropertyName="UtopiaToolArgs" />
      </GeneratePluginInformationTask>
      <RunUtopiaToolTask Arguments="$(UtopiaToolArgs)" RunFromProject="$(ProjectDir)/../Utopia.Tools"/>
    </Target>
    
    <ItemGroup>
    <PackageReference Include="Ben.Demystifier" Version="0.4.1" />
    <PackageReference Include="MessageFormat" Version="7.0.0" />
    <PackageReference Include="NLog.Extensions.Logging" Version="5.3.4" />
    <PackageReference Include="System.CodeDom" Version="7.0.0" />
    <PackageReference Include="System.Collections.Immutable" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Utopia.Core\Utopia.Core.csproj" />
  </ItemGroup>

</Project>
